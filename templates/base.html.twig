<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

    <header id="page-top">
        <!-- NAVBAR DESKTOP -->
        <nav class="navbar navbar-expand-lg navbar-light navbarDesktop">
            <div class="navbar-brand">
                <a href="/">
                    <img src="/img/logo_snowboard.png" width="80" height="80" class="d-inline-block align-top" alt="Snowtricks_logo">
                </a>
            </div>
            <div class="align-items-center pt-2">
                <a href="/" class="name">SnowTricks</a>
            </div>
            <div class="collapse navbar-collapse" id="navbarToggler">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/trick/all">Tricks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login"><i class="fa fa-sign-in signInHome" aria-hidden="true"></i>Sign in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login"><i class="fa fa-user-plus signupHome" aria-hidden="true"></i>Sign up</a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- NAVBAR MOBILE -->
        <div class="logoMobile text-center pt-3">
            <a href="/" class="name">SnowTricks</a>
        </div>
        <nav class="navbar navbarMobile w-100">
            <div class="row w-100 text-center pl-3">
                <div class="col">
                    <a class="nav-link" href="/"><i class="fa fa-home" aria-hidden="true"></i></a>
                </div>
                <div class="col">
                    <a class="nav-link" href="/trick/all"><i class="fa fa-bookmark" aria-hidden="true"></i></a>
                </div>
                <div class="col">
                    <a class="nav-link" href="/login"><i class="fa fa-sign-in" aria-hidden="true"></i></a>
                </div>
            </div>
        </nav>
    </header>


        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
