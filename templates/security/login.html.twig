{% extends 'base.html.twig' %}

{% block title 'Login' %}

{% block body %}

    <section id="login">
        <div class="container border form-group d-flex align-items-center flex-column justify-content-around">
            <h1 class="h3 mb-3 font-weight-normal">Login</h1>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="form-group d-flex flex-column align-items-center">
                    <label for="inputUsername">Username</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" required autofocus>
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" required>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="div-a d-flex flex-column align-items-center justify-content-between">
                        <a href="{{ path('forgot_password') }}">Forgot password ?</a>
                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">Login</button>
                </div>
            </form>
        </div>
    </section>

{% endblock %}


