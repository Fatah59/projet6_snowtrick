{% extends 'base.html.twig' %}

{% block title 'Forgot Password' %}

{% block body %}
    <section class="forgotpassword">
        <div class="container border form-group d-flex align-items-center flex-column justify-content-around">
            <h1>Forgot Password</h1>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(forgotPasswordForm) }}
            <div class="form-group d-flex flex-column align-items-center">

                <div class="form-errors">
                    {{ form_errors(forgotPasswordForm.username) }}
                </div>
                {{ form_widget(forgotPasswordForm) }}
            </div>
            <div class="form-group d-flex flex-column align-items-center">
                <button class="btn btn-primary btn-primary-blue-reverse" type="submit">Ask for reset password</button>
            </div>


            {{ form_end(forgotPasswordForm) }}


        </div>
    </section>

{% endblock %}