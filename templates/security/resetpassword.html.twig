{% extends 'base.html.twig' %}

{% block title 'Reset Password' %}

{% block body %}
    <section class="resetpassword">

        <div class="container border form-group d-flex align-items-center flex-column justify-content-around">
            <h1>Reset Password</h1>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(resetPasswordForm) }}
            <div class="form-group d-flex flex-column align-items-center">

                <div class="form-errors">
                    {{ form_errors(resetPasswordForm.email) }}
                </div>
                {{ form_widget(resetPasswordForm) }}
            </div>
            <div class="form-group d-flex flex-column align-items-center">
                <button class="btn btn-primary btn-primary-blue-reverse" type="submit">reset the password</button>
            </div>


            {{ form_end(resetPasswordForm) }}


        </div>

    </section>

{% endblock %}